<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_second"
    tools:context=".presentation.home.MediaInstructionsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/palet2"
            app:navigationIcon="@drawable/ic_chevron_left"
            app:title="Petunjuk Media"
            app:titleTextColor="@color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/greetingTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hai Sobat Greatchem! "
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/palet1" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Untuk mengetahui fitur-fitur yang ada di Greatchem Apps, disimak ya penjelasan berikut!"
                    android:textSize="14sp"
                    android:textColor="@color/palet1"
                    android:layout_marginBottom="8dp"
                    android:justificationMode="inter_word"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardKompetensi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/greetingTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_card_petunjuk_media">

                    <ImageView
                        android:id="@+id/kompetensiCard"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_kompetensi"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/kompetensiTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kompetensi"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/palet1" />

                        <TextView
                            android:id="@+id/kompetensiDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/palet2"
                            android:justificationMode="inter_word"
                            android:text="Berisi Capaian Pembelajaran (CP) dan Tujuan Pembelajaran (TP) yang dapat diperoleh oleh Sobat Greatchem dengan menggunakan Greatchem Apps"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardPetaKonsep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/cardKompetensi"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_card_petunjuk_media">

                    <ImageView
                        android:id="@+id/PetaKonsepCard"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_peta_konsep"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/petaKonsepTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Peta Konsep"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/palet1" />

                        <TextView
                            android:id="@+id/petaKonsepDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/palet2"
                            android:justificationMode="inter_word"
                            android:text="Berisi peta konsep atau keterkaitan materi laju reaksi yang terdiri dari Konsentrasi, Luas Permukaan, Suhu, Sifat Zat, dan Katalis yang dapat memudahkan Sobat Greatchem dalam belajar konsep laju reaksi"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardEdukasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/cardPetaKonsep"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_card_petunjuk_media">

                    <ImageView
                        android:id="@+id/EdukasiCard"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_edukasi"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/edukasiTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edukasi"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/palet1" />

                        <TextView
                            android:id="@+id/edukasiDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/palet2"
                            android:justificationMode="inter_word"
                            android:text="Berisi fitur-fitur yang dapat memudahkan Sobat Greatchem dalam belajar laju reaksi, diantaranya terdapat fitur: "/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp"
                            android:paddingStart="4dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1."
                                android:textColor="@color/palet1"
                                android:textStyle="bold"
                                android:layout_marginEnd="4dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Video pembelajaran : berisi penjelasan materi laju reaksi mengenai faktor-faktor laju reaksi secara audio dilengkapi dengan visual berupa gambar, animasi, teks, atau grafik."
                                android:textColor="@color/palet2"
                                android:justificationMode="inter_word"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp"
                            android:paddingStart="4dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2."
                                android:textColor="@color/palet1"
                                android:textStyle="bold"
                                android:layout_marginEnd="4dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="G-Lab : untuk memberikan pengalaman belajar yang inklusif dan interaktif, sambil mengaitkan wawasan green chemistry pada materi laju reaksi."
                                android:textColor="@color/palet2"
                                android:justificationMode="inter_word"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp"
                            android:paddingStart="4dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3."
                                android:textColor="@color/palet1"
                                android:textStyle="bold"
                                android:layout_marginEnd="4dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Latihan Soal : untuk menguji seberapa dalam pemahaman Sobat Greatchem setelah mempelajari materi laju reaksi terkait faktor-faktor laju reaksi."
                                android:textColor="@color/palet2"
                                android:justificationMode="inter_word"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardScanAR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/cardEdukasi"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_card_petunjuk_media">

                    <ImageView
                        android:id="@+id/ScanARCard"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_scan_ar"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/scanARTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Scan AR"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/palet1" />

                        <TextView
                            android:id="@+id/scanARDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/palet2"
                            android:justificationMode="inter_word"
                            android:text="Berisi kamera yang berguna untuk scan Augmented Reality pada Flashcard, sehingga dapat menampilkan video pembelajaran yang menarik sesuai dengan materi yang tertera di kartu tersebut."/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/cardScanAR"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_card_petunjuk_media">

                    <ImageView
                        android:id="@+id/GameCard"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_game"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/GameTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Game"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/palet1" />

                        <TextView
                            android:id="@+id/gameDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/palet2"
                            android:justificationMode="inter_word"
                            android:text="Berisi games menarik yang dapat dimainkan oleh Sobat Greatchem sambil belajar materi laju reaksi."/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardDeveloperInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/cardGame"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_card_petunjuk_media">

                    <ImageView
                        android:id="@+id/DeveloperInfoCard"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_pengembang"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/DeveloperInfoTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Informasi Pengembang"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/palet1" />

                        <TextView
                            android:id="@+id/developerInfoDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/palet2"
                            android:justificationMode="inter_word"
                            android:text="Berisi informasi mengenal lebih dekat identitas pengembang Greatchem"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>