<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_second"
    tools:context=".presentation.home.CompetenceFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/palet2"
            app:navigationIcon="@drawable/ic_chevron_left"
            app:navigationIconTint="@color/white"
            app:title="Kompetensi"
            app:titleTextColor="@color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardCapaianPembelajaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp"
                        android:paddingEnd="8dp">

                        <!-- FrameLayout to allow overlapping of ImageView and TextView -->
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <!-- TextView is placed first, acting as the "background" layer -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Capaian Pembelajaran"
                                android:textColor="@color/black"
                                android:background="@drawable/rounded_background"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:paddingStart="40dp"
                                android:paddingEnd="20dp"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:layout_marginStart="0dp"
                                android:gravity="center_vertical"
                                android:layout_gravity="center_vertical"/>

                            <!-- ImageView is placed second, overlaying the TextView -->
                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_lightbulb"
                                android:padding="5dp"
                                android:tint="@color/palet5"
                                android:background="@drawable/bg_circle_menu"
                                android:layout_gravity="center_vertical|start"/>
                        </FrameLayout>

                    </LinearLayout>

                    <!-- Horizontal ScrollView untuk tabel -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:scrollbars="none">

                        <TableLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:stretchColumns="*"
                            android:background="@drawable/border_table">

                            <!-- Table Header Row -->
                            <TableRow
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/palet1">
                                <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:text="Elemen"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:padding="8dp"/> <!-- Add border to cell -->
                                <TextView
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:text="Kompetensi Dasar (KD)"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:padding="8dp"/> <!-- Add border to cell -->
                                <TextView
                                    android:layout_width="250dp"
                                    android:layout_height="wrap_content"
                                    android:text="Capaian Pembelajaran"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:padding="8dp"/> <!-- Add border to cell -->
                            </TableRow>

                            <!-- Elemen Pemahaman Kimia - Kompetensi Dasar 3.6 -->
                            <TableRow
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/palet5_50">
                                <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="match_parent"
                                    android:text="Pemahaman Kimia"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:padding="5dp"
                                    android:justificationMode="inter_word"/>
                                <TextView
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:text="KD 3.6: Menjelaskan faktor-faktor yang memengaruhi laju reaksi menggunakan teori tumbukan"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:padding="8dp"
                                    android:justificationMode="inter_word"/>
                                <TextView
                                    android:layout_width="250dp"
                                    android:layout_height="wrap_content"
                                    android:text="Peserta didik mampu memahami konsep teori tumbukan dan mampu menjelaskan pengaruh suhu, konsentrasi, tekanan, luas permukaan, dan katalis terhadap laju reaksi."
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:padding="8dp"
                                    android:justificationMode="inter_word"/>
                            </TableRow>

                            <!-- Elemen Keterampilan Proses - Kompetensi Dasar 4.6 -->
                            <TableRow
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/palet5_50">
                                <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="match_parent"
                                    android:visibility="invisible"/> <!-- Add border to cell -->
                                <TextView
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:text="KD 3.7: Menentukan orde reaksi dan tetapan laju reaksi berdasarkan data hasil percobaan"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:padding="8dp"
                                    android:justificationMode="inter_word"/> <!-- Add border to cell -->
                                <TextView
                                    android:layout_width="250dp"
                                    android:layout_height="wrap_content"
                                    android:text="Peserta didik mampu menganalisis data eksperimen untuk menentukan orde reaksi dan menghitung tetapan laju reaksi menggunakan persamaan laju."
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:padding="8dp"
                                    android:justificationMode="inter_word"/> <!-- Add border to cell -->
                            </TableRow>

                            <!-- Elemen Keterampilan Proses - Kompetensi Dasar 4.7 (continued from Keterampilan Proses) -->
                            <TableRow
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <!-- No Elemen TextView here, as it's spanned from above -->
                                <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="match_parent"
                                    android:text="Keterampilan Proses"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:padding="5dp"
                                    android:justificationMode="inter_word"/>
                                <TextView
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:text="KD 4.6: Menyajikan hasil penelusuran informasi cara-cara pengaturan dan penyimpanan bahan untuk mencegah perubahan fisika dan kimia yang tak terkendali."
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:padding="8dp"
                                    android:justificationMode="inter_word"/> <!-- Add border to cell -->
                                <TextView
                                    android:layout_width="250dp"
                                    android:layout_height="wrap_content"
                                    android:text="Peserta didik mampu mencari informasi dari berbagai sumber dan mempresentasikan solusi penyimpanan bahan kimia secara aman agar tidak terjadi reaksi yang tidak diinginkan."
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:padding="8dp"
                                    android:justificationMode="inter_word"/> <!-- Add border to cell -->
                            </TableRow>
                            <TableRow
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <!-- No Elemen TextView here, as it's spanned from above -->
                                <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="match_parent"
                                    android:visibility="invisible"/>
                                <TextView
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:text="KD 4.7: Merancang, melakukan, dan menyimpulkan serta menyajikan hasil percobaan faktor-faktor yang mempengaruhi laju reaksi dan orde reaksi"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:padding="8dp"/> <!-- Add border to cell -->
                                <TextView
                                    android:layout_width="250dp"
                                    android:layout_height="wrap_content"
                                    android:text="Peserta didik mampu melakukan eksperimen sederhana, mengolah data, menarik kesimpulan ilmiah, dan menyajikan hasil investigasi mengenai faktor-faktor yang memengaruhi laju reaksi."
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:padding="8dp"/> <!-- Add border to cell -->
                            </TableRow>

                        </TableLayout>
                    </HorizontalScrollView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp"
                        android:paddingEnd="8dp">

                        <!-- FrameLayout to allow overlapping of ImageView and TextView -->
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <!-- TextView is placed first, acting as the "background" layer -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Tujuan Pembelajaran"
                                android:textColor="@color/black"
                                android:background="@drawable/rounded_background"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:paddingStart="40dp"
                                android:paddingEnd="20dp"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:layout_marginStart="0dp"
                                android:gravity="center_vertical"
                                android:layout_gravity="center_vertical"/>

                            <!-- ImageView is placed second, overlaying the TextView -->
                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:padding="5dp"
                                android:src="@drawable/ic_tujuan"
                                android:tint="@color/palet5"
                                android:background="@drawable/bg_circle_menu"
                                android:layout_gravity="center_vertical|start"/>
                        </FrameLayout>

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:background="@drawable/bg_card_homepage">

                            <!-- TP 1 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="4dp"
                                android:paddingStart="4dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1."
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:layout_marginEnd="4dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Peserta didik dapat menjelaskan teori tumbukan serta hubungannya dengan faktor-faktor yang memengaruhi laju reaksi (konsentrasi, suhu, luas permukaan, dan katalis) dengan menggunakan media visual atau animasi interaktif."
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:justificationMode="inter_word"/>
                            </LinearLayout>

                            <!-- TP 2 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="4dp"
                                android:paddingStart="4dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2."
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:layout_marginEnd="4dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Peserta didik dapat merancang dan melakukan simulasi atau eksperimen sederhana untuk mengamati pengaruh berbagai faktor terhadap laju reaksi, baik secara langsung atau melalui aplikasi pembelajaran."
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:justificationMode="inter_word"/>
                            </LinearLayout>

                            <!-- TP 3 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="4dp"
                                android:paddingStart="4dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3."
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:layout_marginEnd="4dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Peserta didik dapat mengumpulkan dan menganalisis data hasil percobaan, kemudian menyimpulkan bagaimana setiap faktor memengaruhi laju reaksi."
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:justificationMode="inter_word" />
                            </LinearLayout>

                            <!-- TP 4 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="4dp"
                                android:paddingStart="4dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4."
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:layout_marginEnd="4dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Peserta didik dapat menentukan orde reaksi dan tetapan laju reaksi dari data yang diberikan melalui aktivitas berbasis visual, grafis, atau interaktif."
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:justificationMode="inter_word" />
                            </LinearLayout>

                            <!-- TP 5 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="4dp"
                                android:paddingStart="4dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5."
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:layout_marginEnd="4dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Peserta didik dapat menyajikan hasil eksperimen dan interpretasi datanya secara lisan, tulisan, atau visual."
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:justificationMode="inter_word" />
                            </LinearLayout>

                        </LinearLayout>
                        <ImageView
                            android:layout_width="250dp"
                            android:layout_height="250dp"
                            android:src="@drawable/bg_proffesor"
                            android:layout_gravity="bottom|end"
                            android:alpha="0.1"/>
                    </FrameLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>